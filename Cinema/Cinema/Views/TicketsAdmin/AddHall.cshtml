@using Cinema.Models.Tickets
@model Cinema.Models.Tickets.Hall

@section SubNav
{
    @Html.Partial("~/Views/Shared/SubNavigation.cshtml", SubNavigationMenu.Halls)
}

<h2>Add Hall</h2>

@using (Html.BeginForm("AddHall", "TicketsAdmin"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <input type="submit" value="Add hall" class="btn btn-success">
}