
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Resources.PreRenderMainHead.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.About, "About", "Home")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Contact, "Contact", "Home")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Login, "LogIn", "Account")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Admin, "GetMoviesList", "TicketsAdmin")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Schedule, "GetMovies", "Tickets")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Search, "SearchForFilms", "Tickets")</li>
                    <li>@Html.ActionLink(Resources.PreRenderMainHead.Reports, "Reports", "Tickets")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.ActionLink("English", ViewContext.RouteData.Values["action"].ToString(),
                   ViewContext.RouteData.Values["controller"].ToString(), new { language = "en-Us" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Russian", ViewContext.RouteData.Values["action"].ToString(),
                   ViewContext.RouteData.Values["controller"].ToString(), new { language = "ru-Ru" }, null)
                    </li>
                </ul>
            </div>
            @RenderSection("SubNav", required: false)
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Html.Partial("~/Views/Chat/Chat.cshtml")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/signalr/hubs"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
